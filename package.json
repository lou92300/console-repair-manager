{
  "name": "console-repair-manager",
  "version": "1.0.0",
  "description": "Application pour gérer les réparations de consoles de jeux.",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "server": "node server-secure.js",
    "start": "concurrently \"npm run server\" \"npm run dev\"",
    "dev:server": "nodemon server-secure.js",
    "build:prod": "npm run build",
    "start:prod": "NODE_ENV=production node server-secure.js",
    "pm2:start": "pm2 start ecosystem.config.js --env production",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:delete": "pm2 delete ecosystem.config.js",
    "pm2:logs": "pm2 logs console-repair-manager",
    "pm2:status": "pm2 status",
    "deploy": "npm run build && pm2 start ecosystem.config.js --env production",
    "deploy:update": "npm run build && pm2 restart ecosystem.config.js"
  },
  "dependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/nodemailer": "^6.4.17",
    "@types/react-router-dom": "^5.3.3",
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^11.10.0",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "express-validator": "^7.2.0",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.18",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.6.2",
    "validator": "^13.15.15"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/nodemailer": "^6.4.17",
    "@types/react": "^18.3.17",
    "@types/react-dom": "^18.3.1",
    "@types/react-router-dom": "^5.3.3",
    "@vitejs/plugin-react": "^4.3.4",
    "nodemon": "^3.1.9",
    "typescript": "~5.6.3",
    "vite": "^5.4.19",
    "vitest": "^2.1.8"
  },
  "keywords": [
    "console",
    "repair",
    "management",
    "games"
  ],
  "author": "Lounes",
  "license": "MIT"
}
